<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.code.mbertuz.mainscreen.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/slidingMenuLayout">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#e1e1e1"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Target"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_pin_drop_black_24dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/targetButton"
            android:onClick="targetTextClick"
            android:background="#E1E1E1"/>
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flight Path"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_flight_black_24dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/flightPathButton"
            android:background="#E1E1E1"
            android:onClick="flightPathTextClick"/>
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Video"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_videocam_black_24dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/videoButton"
            android:background="#E1E1E1"
            android:onClick="videoTextClick"/>
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Horizon"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_looks_black_24dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/horizonButton"
            android:background="#E1E1E1"
            android:onClick="horizonTextClick"/>
        <TextView
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display"
            android:drawablePadding="15dp"
            android:drawableLeft="@mipmap/ic_add_circle_outline_black_24dp"
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/displayButton"
            android:onClick="displayTextClick"
            android:background="#E1E1E1"/>
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:paddingLeft="50dp"
            android:id="@+id/displayList"
            android:orientation="vertical">
            <CheckBox
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Height"
                android:textColor="#787878"
                android:buttonTint="@color/colorPrimary"/>
            <CheckBox
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Roll"
                android:textColor="#787878"
                android:buttonTint="@color/colorPrimary"/>
            <CheckBox
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Pitch"
                android:textColor="#787878"
                android:buttonTint="@color/colorPrimary"/>
            <CheckBox
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Yaw"
                android:textColor="#787878"
                android:buttonTint="@color/colorPrimary"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/selectorblue"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector"/>
        </RelativeLayout>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        android:orientation="vertical"
        android:layout_gravity="start">
        <TextView
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:drawablePadding="30dp"
            android:paddingRight="100dp"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:background="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/secondaryMenuTitle"
            android:drawableLeft="@mipmap/ic_arrow_back_white_24dp"
            android:onClick="backArrowClick"/>
    </LinearLayout>




</android.support.v4.widget.DrawerLayout>
